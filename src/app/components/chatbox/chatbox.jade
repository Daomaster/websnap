md-card(ng-repeat='item in vm.options' md-whiteframe='6' ng-click='vm.expand(item.from)')
  md-card-title
    md-card-title-text
      span {{item.content.length}}  Message from {{item.from}}
  md-card-content(layout='row' layout-align='space-around center')
    div(flex='50')
      span
        | {{ item.content[0].msg | limitTo: 20 }}{{item.content[0].msg.length > 20 ? '...' : ''}}
    div
      span
        | {{item.content[0].time | limitTo: 10}}

